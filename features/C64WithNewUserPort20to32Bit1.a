kBus24Bit_VideoLayer_ExpandedPalettes = 1

!ct pet
!sal
!pdb "target/t.pdb"
!source "C64/stdlib/stdlib.a"
!source "C64/stdlib/LongBranches.a"
!source "C64/stdlib/PETSCII.a"
